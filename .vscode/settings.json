{
  "files.exclude": {
    ".editorconfig": true
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "files.insertFinalNewline": true,
  "editor.rulers": [],
  "editor.wordWrap": "off",
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "git.ignoreLimitWarning": true,
  "editor.overviewRulerBorder": false,
}
